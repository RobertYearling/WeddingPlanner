@model Wedding

<div class="container">
    <div class="row">
        <div class="row text-right">
        <li style="list-style-type:none;padding-left: 300px; "><a href="/dashboard">Dashboard</a> | <a href="/logout">Log Out</a></li>
        </div>
    </div>
    <div class="row">
        <form asp-action="PlanWedding" asp-controller="Home" method="post" class="col-6 mx-auto bg-light p5-rounded">
            <h2 class="text-center">Create A Wedding</h2>
            <div class="form-group">
                <label asp-for="Bride"></label>
                <input asp-for="Bride" class="form-control">
                <span class="text-danger" asp-validation-for="Bride"></span>
            </div>
            <div class="form-group">
                <label asp-for="Groom"></label>
                <input asp-for="Groom" class="form-control">
                <span class="text-danger" asp-validation-for="Groom"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date"></label>
                <input asp-for="Date" class="form-control">
                <span class="text-danger" asp-validation-for="Date"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control">
                <span class="text-danger" asp-validation-for="Address"></span>
            </div>
            <input type="submit" value="Plan" class="btn btn-success">
        </form>
    </div>
</div>

